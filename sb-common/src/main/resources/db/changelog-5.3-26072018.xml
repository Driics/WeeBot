<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="5.3-26072018-1" author="driics">
        <addColumn tableName="command_config">
            <column name="allowed_channels" type="jsonb"/>
        </addColumn>
    </changeSet>

    <changeSet id="5.3-26072018-2" author="driics">
        <addColumn tableName="guild_config">
            <column name="time_zone" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="5.3-26072018-3" author="driics">
        <sql>UPDATE guild_config
             SET time_zone = 'Etc/Greenwich'</sql>
        <addNotNullConstraint tableName="guild_config" columnName="time_zone"/>
        <rollback>
            <dropNotNullConstraint tableName="guild_config" columnName="time_zone"/>
            <dropColumn tableName="guild_config" columnName="time_zone"/>
        </rollback>
    </changeSet>

    <changeSet id="5.3-04082018-3" author="driics">
        <dropNotNullConstraint tableName="mute_state" columnName="channel_id"/>
        <dropNotNullConstraint tableName="mute_state" columnName="reason"/>
    </changeSet>

</databaseChangeLog>