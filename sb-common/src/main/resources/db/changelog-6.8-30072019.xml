<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="6.8-30072019-1" author="driics">
        <addColumn tableName="member_warning">
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="6.8-30072019-2" author="driics" runInTransaction="false">
        <sql>CREATE INDEX CONCURRENTLY IF NOT EXISTS idx_member_warning_gv_active_true
            ON member_warning (guild_id, violator_id)
            WHERE active</sql>
        <rollback>
            <sql>DROP INDEX CONCURRENTLY IF EXISTS idx_member_warning_gv_active_true</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>