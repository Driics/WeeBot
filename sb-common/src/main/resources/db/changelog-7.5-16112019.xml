<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="7.5-16112019-1" author="driics">
        <sql>
            ALTER TABLE junipost DROP CONSTRAINT IF EXISTS fk_junipost_web_hook;
            DELETE
            FROM web_hook
            WHERE id IN (SELECT DISTINCT web_hook_id FROM junipost);
            DROP TABLE junipost;
        </sql>
    </changeSet>

    <changeSet id="7.5-16112019-2" author="driics">
        <addColumn tableName="ranking_config">
            <column name="max_voice_members" type="INTEGER"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>