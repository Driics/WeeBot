<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="5.0-14072018-1" author="driics">
        <addColumn tableName="welcome_message">
            <column name="join_roles" type="jsonb"/>
        </addColumn>
    </changeSet>

    <changeSet id="5.0-14072018-2" author="driics">
        <sql>
            UPDATE welcome_message
            SET join_roles = ('[' || join_role_id || ']')::jsonb
            WHERE join_role_id IS NOT NULL;
        </sql>
    </changeSet>

    <changeSet id="5.0-14072018-3" author="driics">
        <dropColumn tableName="welcome_message">
            <column name="join_role_id"/>
        </dropColumn>
    </changeSet>

    <changeSet id="5.0-15072018-1" author="driics">
        <addColumn tableName="reaction_roulette">
            <column name="ignored_channels" type="jsonb"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>