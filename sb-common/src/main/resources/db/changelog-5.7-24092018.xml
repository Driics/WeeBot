<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="5.7-24092018-1" author="driics">
        <addColumn tableName="vk_connection">
            <column name="show_date" type="BOOLEAN" defaultValueBoolean="true"/>
        </addColumn>
    </changeSet>

    <changeSet id="5.7-24092018-2" author="driics">
        <preConditions onFail="HALT">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM (SELECT guild_id, key
                      FROM command_config
                      GROUP BY guild_id, key
                      HAVING COUNT (*) > 1) t
            </sqlCheck>
        </preConditions>
        <dropIndex tableName="command_config" indexName="idx_command_config_guild_id_key"/>
        <createIndex tableName="command_config" indexName="idx_command_config_guild_id_key" unique="true">
            <column name="guild_id"/>
            <column name="key"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>