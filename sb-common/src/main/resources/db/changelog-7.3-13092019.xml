<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="7.3-13092019-1a" author="driics">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="message_history"/>
        </preConditions>
        <modifyDataType tableName="message_history" columnName="message" newDataType="text"/>
        <dropIndex tableName="message_history" indexName="idx_message_history_guild_id"/>
        <dropIndex tableName="message_history" indexName="idx_message_history_member"/>
        <dropIndex tableName="message_history" indexName="idx_message_history_message"/>
        <dropColumn tableName="message_history" columnName="guild_id"/>
        <dropColumn tableName="message_history" columnName="channel_id"/>
        <createIndex indexName="idx_message_history_message_id" tableName="message_history" unique="true">
            <column name="message_id"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="message_history" indexName="idx_message_history_message_id"/>
            <addColumn tableName="message_history">
                <column name="guild_id" type="BIGINT"/>
            </addColumn>
            <addColumn tableName="message_history">
                <column name="channel_id" type="BIGINT"/>
            </addColumn>
            <!-- Индексы можно восстановить при необходимости -->
        </rollback>
    </changeSet>
    <changeSet id="7.3-13092019-1b" author="driics" runInTransaction="true">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="message_history"/>
        </preConditions>
        <sql>TRUNCATE TABLE message_history;</sql>
        <rollback>
            <!-- Невозможно восстановить данные после TRUNCATE -->
        </rollback>
    </changeSet>

    <changeSet id="7.3-13092019-2" author="driics">
        <addColumn tableName="user">
            <column name="last_online_date" type="TIMESTAMP WITH TIME ZONE"/>
        </addColumn>
    </changeSet>

    <changeSet id="7.3-13092019-3" author="driics">
        <addColumn tableName="message_template">
            <column name="embed_content" type="TEXT"/>
        </addColumn>
        <sql>UPDATE message_template
             SET embed_content = content,
                 content = NULL
             WHERE type = 'EMBED';</sql>
        <rollback>
            <sql>UPDATE message_template
                SET content = embed_content,
                embed_content = NULL
                WHERE type = 'EMBED';
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>