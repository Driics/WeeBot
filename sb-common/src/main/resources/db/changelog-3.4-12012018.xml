<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="3.4-012012018-1" author="driics">
        <addColumn tableName="music_config">
            <column name="guild_config_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_music_config_guild_config"
                             references="guild_config(id)"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3.4-012012018-2" author="driics">
        <sql>UPDATE music_config AS m
             SET guild_config_id = g.id FROM guild_config AS g
             WHERE m.id = g.music_config_id;</sql>
    </changeSet>

    <changeSet id="3.4-012012018-3" author="driics">
        <addNotNullConstraint tableName="music_config" columnName="guild_config_id"/>
        <dropColumn tableName="guild_config">
            <column name="music_config_id"/>
        </dropColumn>
    </changeSet>

    <changeSet id="3.4-012012018-4" author="driics">
        <addColumn tableName="ranking_config">
            <column name="guild_config_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_ranking_config_guild_config"
                             references="guild_config(id)"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3.4-012012018-5" author="driics">
        <sql>INSERT INTO ranking (version, member_id, exp)
             SELECT 0,
                    id,
                    COALESCE(exp, 0) WHERE r.id = g.ranking_config_id;</sql>
    </changeSet>

    <changeSet id="3.4-012012018-6" author="driics">
        <addNotNullConstraint tableName="ranking_config" columnName="guild_config_id"/>
        <dropColumn tableName="guild_config">
            <column name="ranking_config_id"/>
        </dropColumn>
    </changeSet>

    <changeSet id="3.4-012012018-7" author="driics">
        <dropUniqueConstraint tableName="member" constraintName="uq_member_constraint"/>
        <dropIndex tableName="member" indexName="idx_member_user_id"/>
        <renameColumn tableName="member" oldColumnName="user_id" newColumnName="user_id_old"/>
        <createTable tableName="user">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="discriminator" type="VARCHAR(4)"/>
            <column name="avatar_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3.4-012012018-8" author="driics">
        <addColumn tableName="member">
            <column name="user_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_member_user"
                             references="user(id)"/>
            </column>
        </addColumn>
        <sql>
            <![CDATA[
            INSERT INTO public.user (version, user_id, name, discriminator, avatar_url)
            SELECT DISTINCT
            ON (user_id_old) 0, user_id_old, name, discriminator, avatar_url
            FROM member
            GROUP BY user_id_old, name, discriminator, avatar_url;
            UPDATE member AS m
            SET user_id = u.id FROM public.user AS u
            WHERE u.user_id = m.user_id_old;
            ]]>
        </sql>
    </changeSet>

    <changeSet id="3.4-012012018-9" author="driics">
        <dropColumn tableName="member" columnName="user_id_old"/>
        <addNotNullConstraint tableName="member" columnName="user_id"/>
        <addUniqueConstraint columnNames="guild_id, user_id"
                             constraintName="uq_member_constraint"
                             tableName="member"/>
        <createIndex indexName="idx_user"
                     tableName="user" unique="true">
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createIndex>
    </changeSet>

    <changeSet id="3.4-012012018-10" author="driics">
        <dropColumn tableName="member" columnName="name"/>
        <dropColumn tableName="member" columnName="discriminator"/>
        <dropColumn tableName="member" columnName="avatar_url"/>
    </changeSet>

    <changeSet id="3.4-012012018-11" author="driics">
        <createTable tableName="ranking">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ranking"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_ranking_member"
                             references="member(id)"/>
            </column>
            <column name="exp" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.4-012012018-12" author="driics">
        <sql>INSERT INTO ranking (version, member_id, exp)
             SELECT 0, id, exp
             FROM member;</sql>
        <dropColumn tableName="member">
            <column name="exp"/>
        </dropColumn>
        <createIndex tableName="ranking" unique="true" indexName="idx_ranking_member_id">
            <column name="member_id"/>
        </createIndex>
        <createIndex tableName="member" indexName="idx_member_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="3.4-012012018-13" author="driics">
        <createTable tableName="sablepost">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_sablepost"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="guild_config_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sablepost_guild_config"
                             references="guild_config(id)"/>
            </column>
            <column name="web_hook_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_sablepost_web_hook" references="web_hook(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3.4-012012018-14" author="driics">
        <sql>INSERT INTO sablepost (version, guild_config_id, web_hook_id)
             SELECT 0, id, web_hook_id
             FROM guild_config
             WHERE web_hook_id IS NOT NULL;</sql>
        <dropColumn tableName="guild_config">
            <column name="web_hook_id"/>
        </dropColumn>
        <createIndex tableName="sablepost" unique="true" indexName="idx_sablepost_web_hook_id">
            <column name="web_hook_id"/>
        </createIndex>
        <createIndex tableName="sablepost" unique="true" indexName="idx_sablepost_guild_config_id">
            <column name="guild_config_id"/>
        </createIndex>
        <createIndex tableName="ranking_config" unique="true" indexName="idx_ranking_config_guild_config_id">
            <column name="guild_config_id"/>
        </createIndex>
        <createIndex tableName="music_config" unique="true" indexName="idx_music_config_guild_config_id">
            <column name="guild_config_id"/>
        </createIndex>
        <dropColumn tableName="web_hook">
            <column name="type"/>
        </dropColumn>
    </changeSet>

    <changeSet id="3.4-012012018-15" author="driics">
        <sql>
            UPDATE custom_command
            SET content = replace(content, '{автор}', '{author}');
            UPDATE custom_command
            SET content = replace(content, '{сервер}', '{guild}');
            UPDATE custom_command
            SET content = replace(content, '{текст}', '{content}');
        </sql>
    </changeSet>

    <changeSet id="3.4-012012018-16" author="driics">
        <sql>
            UPDATE welcome_message
            SET join_message = replace(join_message, '{пользователь}', '{user}');
            UPDATE welcome_message
            SET join_message = replace(join_message, '{сервер}', '{guild}');
            UPDATE welcome_message
            SET leave_message = replace(leave_message, '{пользователь}', '{user}');
            UPDATE welcome_message
            SET leave_message = replace(leave_message, '{сервер}', '{guild}');
        </sql>
    </changeSet>

    <changeSet id="3.4-012012018-17" author="driics">
        <addColumn tableName="guild_config">
            <column name="locale" type="VARCHAR(10)" defaultValue="en">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3.4-012012018-18" author="driics">
        <createTable tableName="member_bio">
            <column name="id" type="BIGSERIAL">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_member_bio"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_member_bio_member"
                             references="member(id)"/>
            </column>
            <column name="bio" type="VARCHAR(2048)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>